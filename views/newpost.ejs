<%- include('headerAfterLogin') %> 
<main class="container " style="margin-top: 2%">
    <div class="row justify-content-center">
        <div class="col-8">
            <h3>New Post</h3>
            <form method="POST">
                <div class="form-group">
                    <label for="newPostTitle">Title</label>
                    <input type="text" class="form-control" id="newPostTitle" name="newPostTitle">
                </div>
                <div class="form-group">
                    <label for="newTextArea">Your post</label>
                    <textarea class="form-control" id="newTextArea" rows="10" placeholder="start typing..." name="newTextArea"></textarea>
                </div>
                <input type="submit" class="btn btn-primary" value="Save">
                <a class="btn btn-link" href="/">Cancel</a>
            </form>
        </div>

    </div>
</main>
<%- include('footer') %> 