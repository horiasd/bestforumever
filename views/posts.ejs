 <%- include('headerAfterLogin') %> 

<main class="container" style="margin-top: 2%">
    <div class="row justify-content-center">
        <div class="col-10 col-md-7 col-lg-7">
            <h3>Your posts</h3>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th style="width: 5%" scope="col">#</th>
                    <th style="width: 70%" scope="col">Post title</th>
                    <th style="width: 25%" scope="col">&nbsp;</th>
                </tr>
                </thead>
                <tbody>
                    <% i=1; usersPosts.forEach(function(post) {%>
                        <tr>
                            <th scope="row"><%= i%></th>
                            <td> <%= post.title %> </td>
                            <td>
                                <a href="/posts/edit/<%=post._id%>" class="btn btn-sm btn-primary"> <i class="fas fa-pencil-alt"></i> </a>
                                <a href="/posts/del/<%=post._id%>" class="btn btn-sm btn-danger"> <i class="far fa-trash-alt"></i> </a>    
                            </td>    
                    </tr>
                    <% i++;}); %>
                </tbody>
            </table>
        </div>
    </div>
</main>

<%- include('footer') %> 